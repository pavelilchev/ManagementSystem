@model MS.Models.Task
@{
    ViewBag.Title = "Details";
}

<div class="detailed-task">
    <div class="row">
        <div class="col-sm-6">
            <p>
                @Model.Id.ToString() - @Model.Title
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <p>
                Created: @Model.CreatedDate.ToString("dd/MM/yyyy") | Due: @Model.DueDate | Status: @Model.Status
            </p>
        </div>
        <div class="col-sm-3">
            <p>
                Assigned to: @Model.AssignedTo
            </p>
        </div>
        <div class="col-sm-3">
            <p>
                @Model.Type
            </p>
        </div>
    </div>
</div>
